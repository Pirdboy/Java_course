<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/background">

    <EditText
        android:id="@+id/ExpText"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:hint="@string/text_hint"
        android:minLines="3"
        android:maxLines="5"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:gravity="top"
        android:textIsSelectable="false"
        android:selectAllOnFocus="false"
        android:textSize="20sp"
        android:background="#E3FFE3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/ResultText"
        android:layout_width="fill_parent"
        android:layout_height="31dp"
        android:paddingTop="2dp"
        android:layout_marginTop="5dp"
        android:hint="@string/result_hint"
        android:gravity="end"
        android:background="#FFCC00"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_below="@+id/ExpText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/ResultText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <RadioButton
                android:id="@+id/radianBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/radian"
                android:layout_column="0"
                android:layout_weight="1"
                android:textSize="11sp"
                android:textColor="#E2FFC8"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/degreeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/degree"
                android:layout_column="1"
                android:textSize="11sp"
                android:textColor="#E2FFC8"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/historyBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="历史数据"
                android:textSize="12sp"
                android:layout_column="2"
                android:layout_weight="1"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/saveBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="存储结果"
                android:textSize="12sp"
                android:layout_column="3"
                android:layout_weight="1"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/acBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AC"
                android:textSize="14sp"
                android:layout_column="4"
                android:layout_weight="1"
                android:textColor="#FFFFFF"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/sinBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sin"
                android:layout_column="0"
                android:layout_weight="1"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/cosBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cos"
                android:layout_column="1"
                android:layout_weight="1"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/tanBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tan"
                android:layout_column="2"
                android:layout_weight="1"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/lnBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ln"
                android:layout_column="3"
                android:layout_weight="1"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="←"
                android:layout_column="3"
                android:layout_weight="1"
                android:textColor="#FFFFFF"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/leftPaBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="("
                android:layout_column="0"
                android:layout_weight="1"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/sevenBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:layout_column="1"
                android:layout_weight="1"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/eightBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:layout_column="2"
                android:layout_weight="1"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/nineBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:layout_column="3"
                android:layout_weight="1"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/addBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:layout_column="4"
                android:layout_weight="1"
                android:textColor="#FFFFFF"/>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/rightPaBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=")"
                android:layout_column="0"
                android:layout_weight="1"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/fourBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:layout_column="1"
                android:layout_weight="1"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/fiveBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_column="2"
                android:layout_weight="1"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/sixBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:layout_column="3"
                android:layout_weight="1"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/subBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="—"
                android:layout_column="4"
                android:layout_weight="1"
                android:textColor="#FFFFFF"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/powBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X^Y"
                android:layout_column="0"
                android:layout_weight="1"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/oneBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_column="1"
                android:layout_weight="1"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/twoBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:layout_column="2"
                android:layout_weight="1"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/threeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:layout_column="3"
                android:layout_weight="1"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/multiBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="×"
                android:layout_column="4"
                android:layout_weight="1"
                android:textColor="#FFFFFF"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/sqrtBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="√"
                android:layout_column="0"
                android:layout_weight="1"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/zeroBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_column="1"
                android:layout_weight="1"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/dotBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:layout_column="2"
                android:layout_weight="1"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/equalBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:layout_column="3"
                android:layout_weight="1"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/divisionBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:layout_column="4"
                android:layout_weight="1"
                android:textColor="#FFFFFF"/>
        </TableRow>
    </TableLayout>

</RelativeLayout>
